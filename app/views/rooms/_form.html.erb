<%= form_for(room) do |f| %>
  <% if room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
      <% room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :name, class: "form-control", placeholder: "name" %>
  </div>

  <div class="form-group">
    <%= f.text_area :description, class: "form-control", placeholder: "description" %>
  </div>

  <div class="form-group">
    <%= f.number_field :accommadates, class: "form-control", placeholder: "accommadates" %>
  </div>

  <div class="form-group">
    <%= f.number_field :bathroom, class: "form-control", placeholder: "bathroom" %>
  </div>

  <div class="input-group">
    <div class="input-group-addon">$</div>
    <%= f.text_field :price, class: "form-control", placeholder: "price" %>
  </div>

  <div class="form-check">
    <%= f.label :kitchen, class: "form-check-label" %>
    <%= f.check_box :kitchen, class: "form-check-input" %>
  </div>

  <div class="form-check">
    <%= f.label :internet, class: "form-check-label" %>
    <%= f.check_box :internet, class: "form-check-input" %>
  </div>

  <div class="form-check">
    <%= f.label :pets, class: "form-check-label" %>
    <%= f.check_box :pets, class: "form-check-input" %>
  </div>

  <div class="actions">
    <%= f.submit "Create Room", class: "btn btn-primary" %>
  </div>
<% end %>
